@Library("shared-lib") _
pipeline {

environment {
GIT_URL = "https://github.com/74956/Repo4.git"
EMAIL_ADDRESS = "aq@gamil.com"
}
    
    agent any

    tools {
        maven "jenkins maven"
    }
    stages {
        stage('Build') {
            steps {
                cleanWs()
                cloneRepo("${env.GIT_URL}")
            }
        }
        stage('Test') {
            steps {
                runAllTestsWithMaven()
            }
        }
    }
    post {
        failure {
            printEmailMsg("${env.EMAIL_ADDRESS}")
         }
    }
    post {
        always {
              cleanWsAfterBuild()
              }
         }
    }
