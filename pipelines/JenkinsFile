@Library("shared-lib") _
pipeline {

GIT_URL = "https://github.com/74956/Repo4.git"
EMAIL_ADDRESS = "aq@gamil.com"
    
    agent any

    tools {
        maven "jenkins maven"
    }
    stages {
        stage('Build') {
            steps {
                cleanWs()
                cloneRepo($GIT_URL)
            }
        }
        stage('Test') {
            steps {
                runAllTestsWithMaven()
            }
        }
    }
    post {
        failure {
            printEmailMsg($EMAIL_ADDRESS)
         }
    }
    post {
        always {
              cleanWsAfterBuild()
              }
         }
    }
